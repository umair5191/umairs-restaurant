<!-- If users enter invalid details, they are redirected here to be informed and prompted to try again -->
<!doctype html>
<html>
  <head>
    <title>Register Page</title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
  </head>
  <body>
    <h1>Register for Umair's Restaurant</h1>
    <h2>Enter your details below to create an account</h2>
    <p>Invalid details entered. Please try again.</p>   <!-- Informs user that they entered invalid details -->
    <form method="POST" action="registered">
        <p>First name: <input id="first" type="text" name="first" /></p>
        <p>Last name: <input id="last" type="text" name="last"/></p>
        <p>Email: <input id="email" type="text" name="email"/></p>
        <p>Username: <input id="username" type="text" name="username"/></p>
        <p>Password (min 10 charcters): <input id="password" type="text" name="password"/></p>
        <input type="submit" value="Register" />
      </form>
  </body>
</html>